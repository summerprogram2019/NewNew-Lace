<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:background="@color/mainColour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/wallet_country_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="40sp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_light"
                android:text="Balance:"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/wallet_amount"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_light"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="137dp"
                android:layout_height="50dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Current Rate:"
                android:textAlignment="textStart"
                android:textColor="@color/greyScale"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/current_rate"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:fontFamily="@font/roboto_mono_light"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="30sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/wallet_country_flag"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:contentDescription="Flag"
            android:padding="10dp" />

    </LinearLayout>


</LinearLayout>