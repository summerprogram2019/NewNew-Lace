<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/culture_shown">

        <ImageView
            android:id="@+id/culture_country_flag"
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/culture_country_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"

            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/culture_hidden"
        android:visibility="gone"
        android:animateLayoutChanges="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:paddingBottom="10dp"
            android:text="Payment Options"
            android:textColor="@android:color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/country_pmts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:paddingBottom="10dp"
            android:text="Country Taboos"
            android:textColor="@android:color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/country_taboos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>


    </LinearLayout>



</LinearLayout>