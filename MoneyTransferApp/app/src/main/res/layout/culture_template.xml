<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkScale"
    android:layout_marginBottom="10dp">



    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/culture_shown"
        android:paddingBottom="10dp"
        >


        <ImageView
            android:id="@+id/culture_country_flag"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/culture_country_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/darkScale"
            android:fontFamily="@font/raleway_regular"
            android:textAlignment="textStart"
            android:textColor="@color/goldenThreads"
            android:textSize="30sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/culture_hidden"
        android:visibility="gone">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/raleway_regular"
            android:paddingTop="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="Payment Options"
            android:background="@color/darkScale"
            android:textColor="@color/goldenThreads"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/country_pmts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:background="@color/darkScale"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@color/mainColour"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:text="Country Taboos"
            android:background="@color/darkScale"
            android:paddingTop="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp"
            android:textColor="@color/goldenThreads"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/country_taboos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@color/darkScale"
            android:paddingTop="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textStyle="bold"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mainColour"></LinearLayout>



</LinearLayout>